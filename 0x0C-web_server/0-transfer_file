#!/usr/bin/env bash

#The param $# refers to the number of args, and -lt is less than, the opposit ins -gt, greater than. 
if [ $# -lt 3 ]
then
	echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
else
	#The -o is used to pass options to ssh in the format used in ssh_config.
	scp -o "StrictHostKeyChecking=no" -i "$4" "$1" "$3@$2:~/"
fi
